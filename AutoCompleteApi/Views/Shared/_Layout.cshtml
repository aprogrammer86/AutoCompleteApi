<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoCompleteApi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/autocomplete/style.css" />
    <style>
        body {
            background-color: rebeccapurple;
        }

        body, html {
            height: 100vh;
        }

        .autocomplete {
            width: 100%;
            height: 100%;
        }
        .search {
            width: 100%;
            height: 50%;
        }
        .form-rounded {
            border-radius: 1rem;
        }


    </style>
</head>
<body>

    <div class="d-flex justify-content-center align-items-start autocomplete">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/autocomplete/ajax.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
